# DeepSea-AI Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=5000

# AWS Bedrock Configuration (Optional - for AI features)
AWS_REGION=us-west-2
AWS_BEARER_TOKEN_BEDROCK=your_bedrock_token_here

# Database Configuration (Optional - uses in-memory storage by default)
DATABASE_URL=your_database_url_here

# Pipeline Configuration
PYTHON_PATH=python
PIPELINE_DATA_DIR=./pipeline/data
PIPELINE_MODELS_DIR=./pipeline/models

# Upload Configuration
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=.fasta,.fa,.fas

# Development Configuration
VITE_API_URL=http://localhost:5000
VITE_WS_URL=ws://localhost:5000/ws